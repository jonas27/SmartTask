<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="900dp"
    android:baselineAligned="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/task_btn_confirm"
            android:layout_alignTop="@+id/task_responsible"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_person_black_24dp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="119dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView4"
            android:layout_below="@+id/task_responsible"
            android:src="@drawable/ic_access_time_black_24dp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="154dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView4"
            android:layout_below="@+id/task_date"
            android:src="@drawable/ic_description_black_24dp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="189dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/imageView5"
            android:layout_below="@+id/task_description"
            android:src="@drawable/ic_place_black_24dp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="224dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_alignStart="@+id/imageView6"
            android:layout_below="@+id/task_category"
            android:src="@drawable/ic_priority_high_black_24dp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="259dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView7"
            android:layout_below="@+id/task_priority"
            android:src="@drawable/ic_stars_black_24dp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="294dp" />

        <TextView
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#1565C0"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/ViewTaskHeadline"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/task_responsible"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/task_imageview"
            android:layout_below="@+id/task_btn_edit"
            android:layout_marginTop="50dp"
            android:text="Responsible"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="119dp" />

        <TextView
            android:id="@+id/task_date"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/task_responsible"
            android:layout_alignStart="@+id/task_responsible"
            android:layout_below="@+id/task_responsible"
            android:text="Timeleft"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="154dp" />


        <TextView
            android:id="@+id/task_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/task_date"
            android:layout_alignStart="@+id/task_date"
            android:layout_below="@+id/task_date"
            android:text="Description"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="189dp" />

        <TextView
            android:id="@+id/task_category"
            android:layout_width="295dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/task_description"
            android:layout_alignStart="@+id/task_description"
            android:layout_below="@+id/task_description"
            android:text="Category"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="224dp" />

        <TextView
            android:id="@+id/task_priority"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/task_category"
            android:layout_alignStart="@+id/task_category"
            android:layout_below="@+id/task_category"
            android:text="Priority"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="259dp" />

        <TextView
            android:id="@+id/task_points"
            android:layout_width="301dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/task_priority"
            android:layout_alignStart="@+id/task_priority"
            android:layout_below="@+id/task_priority"
            android:text="Points"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="294dp" />

        <TextView
            android:id="@+id/task_status"
            android:layout_width="295dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/task_points"
            android:layout_alignStart="@+id/task_points"
            android:layout_below="@+id/task_points"
            android:text="Status"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="329dp" />

        <Button
            android:id="@+id/task_btn_edit"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/ViewTaskEditButton"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="295dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/task_btn_confirm"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/task_btn_add_picture"
            android:layout_below="@+id/task_status"
            android:layout_marginTop="24dp"
            android:text="@string/ViewTaskConfirmButton"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="451dp" />

        <Button
            android:id="@+id/task_btn_add_picture"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/task_imageview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:text="@string/ViewTaskAddPictureButton"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="403dp" />

        <Button
            android:id="@+id/task_btn_done"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/task_btn_add_picture"
            android:layout_below="@+id/task_imageview"
            android:layout_marginTop="11dp"
            android:text="@string/ViewTaskDoneButton"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="499dp" />

        <ImageView
            android:id="@+id/task_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/task_btn_done"
            android:layout_below="@+id/task_status"
            android:layout_marginEnd="7dp"
            android:src="@mipmap/smlogo"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="374dp" />

        <ImageView
            android:id="@+id/task_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_black_24dp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="374dp"
            android:layout_alignTop="@+id/task_uncheck"
            android:layout_alignStart="@+id/task_uncheck" />

        <ImageView
            android:id="@+id/task_uncheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="374dp"
            android:layout_below="@+id/task_points"
            android:layout_alignStart="@+id/imageView2" />

       </RelativeLayout>
</ScrollView>
