<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messenger_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/messages_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_other"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/bg_msg_from"
        android:minEms="2"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="placeholderOther"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_gravity="left|center_vertical"/>

    <TextView
        android:id="@+id/messages_own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/name_own"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="100dp"
        android:minEms="2"
        android:background="@drawable/bg_msg_me"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="placeholderOwn"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_gravity="right|center_vertical"/>

    <TextView
        android:id="@+id/name_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/messages_other"
        android:layout_below="@+id/datetime_other"
        android:layout_marginLeft="5dp"
        android:text="name_other"
        android:textColor="#b9b9b9"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/name_own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name_other"
        android:layout_alignBottom="@+id/name_other"
        android:layout_alignEnd="@+id/messages_own"
        android:layout_marginRight="5dp"
        android:text="name_own"
        android:textAlignment="textEnd"
        android:textColor="#b9b9b9"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/datetime_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="7dp"
        android:padding="4dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TimeOther"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/datetime_own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="7dp"
        android:padding="4dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="TimeOwn"
        android:textAlignment="center"
        android:textSize="11sp"
        android:textStyle="italic" />


</RelativeLayout>